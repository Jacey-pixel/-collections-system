<body>
    <div class="card">
        <h1>ðŸ”’ Supervisor</h1>
        <form id="supForm">
            <input type="email" id="email" placeholder="Management Email" required>
            <input type="password" id="password" placeholder="Password" required>
            <button type="submit">Access Management Portal</button>
        </form>
    </div>
<script>
    document.getElementById('supForm').addEventListener('submit', async e => {
        e.preventDefault();
        try {
            const res = await fetch('https://eram-intl.app.n8n.cloud/webhook/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email: document.getElementById('email').value, password: document.getElementById('password').value })
            });
            const data = await res.json();
            if(data.success && data.type === 'SUPERVISOR') {
                localStorage.setItem('supervisorToken', data.token);
                localStorage.setItem('supervisorInfo', JSON.stringify({ name: data.name, email: document.getElementById('email').value, loginTime: new Date() }));
                window.location.href = 'supervisor-dashboard.html';
            } else { alert('Unauthorized: Supervisor access only.'); }
        } catch(e) { alert('Network Error'); }
    });
</script>
</body>
</html>
